{
  "name": "chess",
  "version": "1.0.0",
  "description": "Chess as a Service API",
  "main": "server.js",
  "scripts": {
    "dev": "npm run build && concurrently -n dotenv,tsc,server 'tsc --watch --preserveWatchOutput' 'nodemon --watch .env --watch build -e js,json --delay 2.5ms --ignore \"build/**/*.test.js\" build/server.js'",
    "build": "tsc -p tsconfig.json",
    "start": "node build/server.js",
    "test": "node node_modules/.bin/jest --verbose --color"
  },
  "author": "Nick Snyder",
  "license": "ISC",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "jest": {
    "projects": {
      "displayName": "test",
      "preset": "ts-jest",
      "testEnvironment": "node"
    }
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.11.10",
    "concurrently": "^7.6.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2"
  }
}
