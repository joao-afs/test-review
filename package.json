{
  "name": "chess",
  "version": "1.0.0",
  "description": "Chess as a Service API",
  "main": "server.js",
  "scripts": {
    "generate:types": "json2ts -i 'src/schemas' -o 'src/types' --unknownAny --cwd 'src/schemas'",
    "dev": "npm run generate:types && npm run build && concurrently -n dotenv,tsc,server 'tsc --watch --preserveWatchOutput' 'nodemon --watch .env --watch build -e js,json --delay 2.5ms --ignore \"build/**/*.test.js\" build/server.js'",
    "build": "tsc -p tsconfig.json",
    "start": "node build/server.js",
    "test": "node node_modules/.bin/jest --verbose --color"
  },
  "author": "Nick Snyder",
  "license": "ISC",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-floating-promises": [
        "error",
        {
          "ignoreVoid": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
          "/node_modules/",
          "<rootDir>/build/"
        ],
        "modulePathIgnorePatterns": [
          "<rootDir>/build/"
        ]
      }
    ]
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "jest": "^29.3.1",
    "json-schema-to-typescript": "^11.0.2",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2"
  },
  "volta": {
    "node": "18.12.1"
  }
}
